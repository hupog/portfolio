---
const { t } = Astro.props;
---

<section
  id="intro-section"
  class="relative min-h-screen flex items-center justify-center overflow-hidden px-4"
>
  <div class="absolute inset-0 -z-10"></div>

  <div class="z-10 text-center max-w-4xl mx-auto">
    <h1 class="text-5xl font-extrabold mb-6">{t.intro.title}</h1>
    <p class="text-xl text-gray-300">{t.intro.description}</p>
  </div>

  <script>
    const { animate, inView } = await import("@motionone/dom");

    inView("#intro-section", () => {
      animate("#intro-section h1", { opacity: [0, 1], y: [-50, 0] }, { duration: 1 });
      animate(
        "#intro-section p",
        { opacity: [0, 1], y: [30, 0] },
        { delay: 0.5, duration: 1 }
      );
    });
  </script>
</section>
